                <p>Seu ID: <br>{{player_id}}</p>
            </div>
        </form>
    </div>

</div>

<style>

    @import url('https://fonts.googleapis.com/css?family=Roboto&display=swap');

    * {
        padding: 0;
        margin: 0;
    }

    .headerSite {
        text-align: center;
        background-color: #111111;
        padding: 20px;
    }

    .headerSite h1 {
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        color: white;
    }

    .headerSite ul li {
        text-decoration: none;
        list-style-type: none;
        display: inline-block;
    }

    .headerSite ul li form button {
        border: none;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        padding: 5px;
        margin-top: 15px;
    }

    .result-id {
        font-family: Arial, Helvetica, sans-serif;
        margin-top: 30px;
    }

    @media screen and (max-width: 1024px) {
        .loader {
            border: 16px solid #f3f3f3; /* Light grey */
            border-top: 16px solid #111111; /* Blue */
            border-radius: 50%;
            width: 120px;
            height: 120px;
            animation: spin 0.3s linear infinite;
            justify-content: center;
            left: 32%;
            top: 35%;
            position: absolute;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

    }

    @media screen and (min-width: 1025px) {
        .loader {
            border: 16px solid #f3f3f3; /* Light grey */
            border-top: 16px solid #111111; /* Blue */
            border-radius: 50%;
            width: 120px;
            height: 120px;
            animation: spin 0.3s linear infinite;
            justify-content: center;
            left: 45%;
            top: 45%;
            position: absolute;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

    }

    #page {
        display: none;
    }

    .searchID {
        text-align: center;
        margin-top: 10px;
    }

    .searchID h2 {
        font-family: 'Roboto', sans-serif;
        font-weight: lighter;
        color: #444;
    }

    .searchID input {
        border: none;
        border-bottom: 1px solid #111111;
        padding: 10px;
    }

    .searchID button {
        border: none;
        background-color: #111111;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        padding: 5px;
        margin-top: 10px;
    }

    .item-store {
        background-color: #fafafa;
        margin: 10px;
        padding: 10px;
        display: inline-block;
    }

    .item-store h3 {
        font-family: 'Roboto', sans-serif;
        font-weight: lighter;
        padding: 10px;
    }

    .item-store p {
        background-color: #111111;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        padding: 5px;
    }
    

</style>

<script>

    function Loader() {
        var loader = document.getElementById('loader')
        var body = document.getElementById('page')

        loader.setAttribute('style', 'display: none;')
        body.setAttribute('style', 'display: block;')


    }

    setInterval(() => { Loader() }, 5000)

</script>